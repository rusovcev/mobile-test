#:import utils kivy.utils

<TabScreen>:
    FloatLayout:
        spacing: 10, 10
        padding: 10
        GridLayout:
            rows: 1
            cols: 3
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("#ffff00ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
        TabbedPanel:
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .8
            tab_pos: "top_mid"
            tab_width: self.width/3
            do_default_tab: False
            background_color: (255, 255, 255, 255)
            # border: [0, 0, 0, 0]
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("#ffffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            TabbedPanelStrip:
                canvas:
                    Color:
                        rgba: (0,255,255,0)
                    Rectangle:
                        pos: self.pos
                        size: self.size
            TabbedPanelItem:
                # canvas:
                #     Color:
                #         rgba: (.0, .0, .0, .5)
                #     Rectangle:
                #         pos: self.pos
                #         size: self.size
                text: "All"
                background_color: (3, 3, 3, 3)
                color: (0, 0, 0, 1)
                ScrollView:
                    id: tabbed_scrollview
                    GridLayout:
                        id: grid_row
                        # rows: 1
                        cols: 1
                        spacing: 10, 10
                        padding: 10, 10
                        size_hint_y: None
                        height: self.minimum_height
                        row_default_height: "100dp"
                        row_force_default: True
                        canvas:
                            Color:
                                rgb: utils.get_color_from_hex("#ffffffff")
                            Rectangle:
                                size: self.size
            TabbedPanelItem:
                text: "Favourites"
                background_color: (3, 3, 3, 3)
                color: (0, 0, 0, 1)
        GridLayout:
            rows: 1
            cols: 3
            pos_hint: {"top": .1, "left": 1}
            size_hint: 1, .1
            canvas:
                Color:
                    rgba: utils.get_color_from_hex("003fffff")
                Rectangle:
                    size: self.size
                    pos: self.pos


