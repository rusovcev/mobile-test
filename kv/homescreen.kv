        Label:
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .1
            text: "Label 1"
            color: 0, 0, 0, 1
            id: home_screen_top_label
            canvas.before:
                Color: 
                    rgba: utils.get_color_from_hex("#dfdfdf7f")
                Rectangle:
                    size: self.size
                    pos:self.pos

        ScrollView:
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .7
            id: scroll_view
            GridLayout:
                cols: 1
                id: grid_all
                spacing: 10, 10
                padding: 10, 10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "100dp"
                row_force_default: True
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#dfdfdf0f")
                    Rectangle:
                        size: self.size
                        pos: self.pos
        GridLayout:
            rows: 1
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#ffff0f")
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0, 0, 10, 10]

            pos_hint: {"top": .1, "left": 1}
